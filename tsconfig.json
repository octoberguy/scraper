{
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ES2023",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
